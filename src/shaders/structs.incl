struct Laser {
    vec4 color;
    bool isOn;
};

struct AmbientLight {
    vec3 color;
    bool isOn;
};

struct DiffuseLight {
    vec3 color;
    vec3 direction;
    float factor;
    bool isOn;
};

struct PointLight
{
	vec3 position;
	vec3 color;
	float ambientFactor;
	float constantAttenuation;
	float linearAttenuation;
	float exponentialAttenuation;
	bool isOn;
};

struct Material {
    bool isOn;
    float specularIntensity;
    float specularStrength;
};